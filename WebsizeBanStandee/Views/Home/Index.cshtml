@model WebsizeBanStandee.Models.HomeModel

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <section class="section-main padding-y" style="padding-top:20px">
        <main class="card">
            <div class="card-body">
                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <h6>DANH MỤC SẢN PHẨM</h6>
                        <nav class="nav-home-aside">
                            <ul class="menu-category">
                                @foreach (var item in Model.ListCategory)
                                {
                                    <li>
                                        @Html.ActionLink(item.NameCate, "ProductCatagory", "Catagory", new { @IDCate = item.IDCate }, null)
                                    </li>
                                }
                            </ul>
                        </nav>
                    </aside>
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/images/Banner1.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/Banner2.png" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/Banner3.png" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                    </div>
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Sản Phẩm Bán Chạy</h6>
                            @foreach (var item in Model.ListProduct.Take(3))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@item.NamePro</h6>
                                        <a href="@Url.Action("Detail", "Product", new {ProductID = item.ProductID})" class="btn btn-secondary btn-sm"> Xem Ngay </a>
                                    </div>
                                    <a href="@Url.Action("Detail", "Product", new { ProductID = item.ProductID })">
                                        <img class="img-bg float-right" src="~/@item.ImagePro" height="85">
                                    </a>
                                </div>
                            }
                        </aside>
                    </div>
                </div>

            </div> 
        </main> 

    </section>
    <section class="padding-bottom" style="padding-bottom:14px">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Deals Cực Hot !!!</h3>
                    <p>Số ngày còn lại...</p>
                </header>
                <div class="timer">
                    <div> <span class="num">21</span> <small>Ngày</small></div>
                    <div> <span class="num">09</span> <small>Giờ</small></div>
                    <div> <span class="num">58</span> <small>Phút</small></div>
                    <div> <span class="num">16</span> <small>Giây</small></div>
                </div>
            </div>
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListProduct.Take(3))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="@Url.Action("Detail", "Product", new {ProductID = item.ProductID})" class="img-wrap">
                                <img src="~/@item.ImagePro">
                            </a>
                            <div class="text-wrap p-3">
                                @Html.ActionLink(item.NamePro, "Detail", "Product", new { ProductID = item.ProductID }, null)
                                <span class="badge badge-danger"> -15% </span>
                            </div>
                        </figure>
                    </div> 
                }
            </div>
        </div>

    </section>

