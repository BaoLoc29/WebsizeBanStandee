@model WebsizeBanStandee.Context.OrderPro

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

<h2>XÓA ĐƠN HÀNG</h2>

<h3>Bạn có chắc muốn xóa đơn hàng này không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày Đặt Hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOrder)
        </dd>

        <dt>
            Địa Chỉ Giao Hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddressDeliverry)
        </dd>

        <dt>
            Tên Khách Hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.NameCus)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-Bas" /> |
            <a href="/Admin/Categories/Index" class="btn btn-danger">Trở về</a>
        </div>
    }
</div>
