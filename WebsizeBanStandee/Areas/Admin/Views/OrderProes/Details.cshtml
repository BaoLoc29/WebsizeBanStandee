@model WebsizeBanStandee.Context.OrderPro

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

<h2>CHI TIẾT</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày Đặt Hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOrder)
        </dd>

        <dt>
            Địa Chỉ Giao Hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddressDeliverry)
        </dd>

        <dt>
            Tên Khách Hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.NameCus)
        </dd>
    </dl>
    <div style="padding-left:50px">
        <h4>Chi tiết Đơn Hàng</h4>
        <table class="table-bordered" width="400px">
            <tr>
                <th>Sản Phẩm</th>
                <th>Số Lượng</th>
                <th>Đơn Giá</th>
                <th>Thành Tiền</th>
            </tr>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.IDProduct</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@(item.Quantity * item.UnitPrice)</td>
                </tr>
            }
        </table>
    </div>
</div>
<p style="padding-left:19px; padding-top:20px">
    <a href="/Admin/OrderProes/Index" class="btn btn-danger">Trở về</a>
</p>
