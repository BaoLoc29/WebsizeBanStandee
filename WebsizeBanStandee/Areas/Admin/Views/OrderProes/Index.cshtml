@model IEnumerable<WebsizeBanStandee.Context.OrderPro>

@{
    ViewBag.Title = "DANH SÁCH ĐƠN HÀNG";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

<h2>DANH SÁCH ĐƠN HÀNG</h2>
<div style="padding-bottom:20px">
    <a href="/Admin/OrderProes/Create" class="btn btn-primary">Tạo đơn hàng</a>
</div>

<table class="table table-hover" style="border-width:thick">
    <tr>
        <th>
            Ngày Giao Hàng
        </th>
        <th>
            Địa Chỉ Giao Hàng
        </th>
        <th>
            Khách Hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressDeliverry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.NameCus)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
