@model WebsizeBanStandee.Context.OrderPro

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

<h2>SỬA ĐƠN HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Ngày Đặt Hàng :</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateOrder, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateOrder, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Tên Khách Hàng :</b>
            </div>
            <div class="col-md-10">
                @Html.DropDownList("IDCus", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDCus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Địa Chỉ Giao Hàng :</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AddressDeliverry, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AddressDeliverry, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<a href="/Admin/OrderProes/Index" class="btn btn-danger">Trở về</a>
