@model WebsizeBanStandee.Context.Customer

@{
    ViewBag.Title = "XÓA THÔNG TIN KHÁCH HÀNG";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

<h2>XÓA THÔNG TIN KHÁCH HÀNG</h2>

<h3>Bạn có chắc muốn xóa thông tin khách hàng này không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Khách Hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameCus)
        </dd>

        <dt>
            Số Điện Thoại :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneCus)
        </dd>

        <dt>
            Email :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailCus)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-bas" /> |
            <a href="/Admin/Customers/Index" class="btn btn-danger">Trở về</a>
        </div>
    }
</div>
