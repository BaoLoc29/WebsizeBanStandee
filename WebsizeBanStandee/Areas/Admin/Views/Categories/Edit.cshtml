@model WebsizeBanStandee.Context.Category

@{
    ViewBag.Title = "SỬA LOẠI SẢN PHẨM";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

<h2>SỬA LOẠI SẢN PHẨM</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDCate)

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Loại : </b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<a href="/Admin/Categories/Index" class="btn btn-danger">Trở về</a>
