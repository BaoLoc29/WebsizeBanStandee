@model IEnumerable<WebsizeBanStandee.Context.Category>

@{
    ViewBag.Title = "LOẠI SẢN PHẨM";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

<h2>LOẠI SẢN PHẨM</h2>

<div style="padding-bottom:20px">
    <a href="/Admin/Categories/Create" class="btn btn-primary">Thêm sản phẩm mới</a>
</div>

<table class="table table-hover" style="border-width:thick">
    <tr>
        <th>
            Loại Sản Phẩm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDCate }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCate }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDCate })
            </td>
        </tr>
    }

</table>
